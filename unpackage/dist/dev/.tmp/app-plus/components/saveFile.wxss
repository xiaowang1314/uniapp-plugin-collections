.preview-photo-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.preview-photo-box .item {
    -webkit-box-flex: 1;
    -webkit-flex: 1 0 auto;
        -ms-flex: 1 0 auto;
            flex: 1 0 auto;
}
.preview-photo-box .item .receive-qrcode-img {
      position: relative;
      z-index: 2;
      width: 100%;
}
.preview-photo-box .download-img {
    position: absolute;
    bottom: 30rpx;
    right: 30rpx;
    z-index: 100;
    background: rgba(255, 255, 255, 0.5);
    font-size: 0;
}
.preview-photo-box .download-img image {
      width: 64rpx;
      height: 64rpx;
}
.preview-photo-box .preview-photo-bg {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

