.content {
  display: flex;
  flex: 1;
  flex-direction: column;
  background-color: #fbf9fe;
}
.flex-box {
  display: flex;
  flex-wrap: wrap;
}
.flex-box > .item-2 {
  flex: 0 0 50%;
}
.flex-box > .item-3 {
  flex: 0 0 33.3333%;
}
.title {
  margin: 20rpx 0;
  color: red;
}
.genaral-area .item-2 {
  font-size: 26rpx;
  border: 1rpx solid #e0e0e0;
  border-width: 1rpx 1rpx 0 0;
  padding: 16rpx 0;
  box-sizing: border-box;
  text-align: center;
}
.genaral-area .item-2:first-child {
  border-left-width: 1rpx;
}
.genaral-area .item-2:last-child {
  border-right-width: 1rpx;
}
.genaral-area .thead .item-2 {
  font-weight: bold;
  box-sizing: border-box;
}
.genaral-area .table:last-child {
  border-bottom: 1rpx solid #e0e0e0;
}
